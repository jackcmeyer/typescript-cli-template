{
  "name": "typescript-cli-template",
  "version": "1.0.0",
  "description": "template for a typescript cli application",
  "main": "index.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "npx tsc",
    "start": "ts-node src/index.ts",
    "test": "npx ava"
  },
  "author": "Jack Meyer",
  "license": "MIT",
  "engines": {
    "node": ">=6"
  },
  "dependencies": {
    "ava": "^2.3.0",
    "chalk": "^2.4.2",
    "commander": "^3.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/core": "^8.1.0",
    "commitlint-config-gitmoji": "^1.0.1",
    "@types/node": "^12.7.4",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "cross-env": "^6.0.0",
    "cz-emoji": "^1.1.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-airbnb-typescript": "^4.0.0",
    "eslint-plugin-import": "^2.17.2",
    "dateformat": "^3.0.3",
    "husky": "^3.0.5",
    "mocha": "6.2.0",
    "nodemon": "^1.19.2",
    "ts-mockito": "^2.4.2",
    "ts-node": "^8.1.0",
    "typescript": "^3.6.2"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "sources": [
      "../test/*.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn test"
    }
  }
}